@model IEnumerable<Saloon1.Models.Service>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
 <a asp-action="Create" class="btn btn-outline-primary"> <i class="bi bi-file-plus-fill"></i> Create New</a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>

   <th>
    @Html.DisplayNameFor(model => model.ServiceId)
   </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>EDIT INFO</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

    <td>
     @Html.DisplayFor(modelItem => item.ServiceId)
    </td>

            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ServiceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ServiceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ServiceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
